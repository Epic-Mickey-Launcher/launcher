{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop-capability",
  "windows": [
    "main"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ],
  "permissions": [
    "deep-link:default",
    "deep-link:allow-register",
    "deep-link:allow-is-registered",
    "dialog:default",
    "fs:default",
    "fs:allow-resource-read-recursive",
    "fs:allow-resource-write-recursive",
    "deep-link:allow-get-current",
    {
      "identifier": "fs:write-all"
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "**/*"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$HOME/**/**"
        },
        {
          "path": "$HOME/.config/**"
        },
        {
          "path": "$HOME/.local/**"
        }
      ]
    },
    {
      "identifier": "fs:read-all"
    },
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "core:webview:default",
    "core:window:allow-set-title",
    "default-perms",
    "log:default",
    "log:default",
    "os:default"
  ]
}
